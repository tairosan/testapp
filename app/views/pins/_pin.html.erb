<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin, protocol: "https" %>
	<p><%= pin.description %></p>
	<p>
		<strong>by <%= pin.user.name %></strong>
			<% if current_user == pin.user %>
			<%= link_to 'Edit', edit_pin_path(pin) %>
			<%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
</div>